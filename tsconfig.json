{
	"compilerOptions": {
		"lib": ["esnext", "dom"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "preserve",
		"moduleResolution": "node",
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"strict": true,
		"types": ["naive-ui/volar", "vite/client", "element-plus/global.d.ts"],
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"isolatedModules": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}

